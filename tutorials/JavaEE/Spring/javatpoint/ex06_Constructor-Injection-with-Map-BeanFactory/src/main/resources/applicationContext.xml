<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="q" class="ua.mega.Question">
        <constructor-arg name="id" value="11"/>
        <constructor-arg name="name" value="What is Java?"/>
        <constructor-arg name="answers">
            <map>
                <entry key="Java is a Programming Language" value="Ajay Kumar"/>
                <entry key="Java is a Platform" value="John Smith"/>
                <entry key="Java is an Island" value="Raj Kumar"/>
            </map>
        </constructor-arg>
    </bean>

</beans>